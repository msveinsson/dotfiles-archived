set alias clip ="pbcopy"

# Exa aliases
alias ls "exa --icons --group-directories-first"
alias ll "exa --icons --group-directories-first -l"
alias l "ls -l"
alias la "ls -a"
alias lla "ls -la"
alias lt "exa -T"
alias lta "exa -T -a"

# Run Update scripts
alias ub "~/.config/bin/brew-update.sh"
alias uy "~/.config/bin/yabai-update.sh"